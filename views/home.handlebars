<section>
  <div class="center-text">
    <h1>Home</h1>
  </div>
  
  {{#each posts as |post|}}
  <article>
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>

    <div>
      <p>Created by: {{post.user.name}}</p>
      <p>Created on: {{format_date post.date_created}}</p>
    </div>
  </article>
  {{/each}}
</section>